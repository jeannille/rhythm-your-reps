<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:elevation="8dp"
    app:cardCornerRadius="8dp" >


    <LinearLayout
        android:layout_width="373dp"
        android:layout_height="match_parent"
        android:layout_margin="15dp"
        android:orientation="vertical">

        <!--image view to display our course image-->

        <!--text view for our course name-->
        <ImageView
            android:id="@+id/idCardImageView"
            android:layout_width="272dp"
            android:layout_height="198dp"
            android:layout_gravity="center_horizontal"
            android:layout_margin="5dp"
            android:paddingLeft="20dp" />

        <TextView
            android:id="@+id/idCardExerciseName"
            android:layout_width="330dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_marginStart="20dp"
            android:padding="2dp"
            android:text="Exercise Name"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="373dp"
            android:layout_height="100dp"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            >

            <!--text view for our batch name-->
            <TextView
                android:id="@+id/idCardBodypart"
                android:layout_width="wrap_content"

                android:layout_height="match_parent"
                android:layout_weight="1"
                android:lineSpacingMultiplier=".8"
                android:padding="5dp"
                android:text="body part"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <!--text view to display course tracks-->
            <TextView
                android:id="@+id/idTargetCardView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:padding="5dp"
                android:text="Target"
                android:textColor="@color/black"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/checkboxSearchResultsList"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="0"/>


        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>